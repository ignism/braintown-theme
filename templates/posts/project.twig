{% extends 'base.twig' %}

{% block header %}
    <header class="relative">
        <div class="absolute pin z-0" style="background: url({{ Image(post.header_background).src }}); background-position: center; background-size: cover;"></div>
        <div class="relative z-10 px-5 tablet:px-10 py-10 bg-green-dark-40 text-white h-screen">
            <div class="-ml-5/2 flex flex-wrap content-between h-full">
                <div class="w-full px-5/2">
                    <a class="no-border" href="{{ site.url }}"><img src="{{ theme.link }}/assets/images/logo-small.svg" alt=""></a>
                </div>

                <div class="w-5/6 px-5/2 ml-0 tablet:ml-5/2">
                    <p class="text-larger mb-12" data-aos="fade-right" data-aos-delay="400">
                        {{ post.meta('header_subtitle') }}
                    </p>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}

    {% include '/partials/description.twig' with {
        'title' : 'over braintown'
    } %}

    {% include '/partials/image-slider.twig' with {
        'title': 'over braintown'
    } %}

{% endblock %}

{% block footer %}

    <footer class="px-5 tablet:px-10 py-20 tablet:mt-10">
        <div class="flex flex-wrap -mx-5/2">
            <div class="w-full tablet:w-5/12 desktop:w-1/3 px-5/2 ml-0 tablet:ml-1/12">
                <p class="text-larger">
                    Neem contact op<br>over dit project
                </p>
            </div>
            <div class="w-full tablet:w-5/12 desktop:w-6/12 ml-0 desktop:ml-1/12 px-5/2">
                <p class="text-large">
                    {{ phone }}<br>
                    <a href="mailto:{{ mail }}">{{ mail }}</a>
                </p>
            </div>
        </div>
    </footer>

{% endblock %}